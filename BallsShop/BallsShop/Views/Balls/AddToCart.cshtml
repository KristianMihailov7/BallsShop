@using BallsShop.Data.Models.Cart
@model AddToCartViewModel

<h2>Add to Cart</h2>

<form method="post" asp-action="AddToCart" asp-route-ballId="@Model.BallId">
    <input type="hidden" asp-for="BallId" />
    <div class="form-group">
        <label asp-for="Quantity"></label>
        <input type="number" class="form-control" asp-for="Quantity" value="1" min="1" required />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Add to Basket</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}